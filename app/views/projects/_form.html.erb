<%= form_for(@project, html: { class: 'form-horizontal' }) do |f| %>
  <%= render 'shared/form_errors', model: @project %>

  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control', placeholder: 'Butter cookies' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :tag_list, class: 'form-control', placeholder: 'cookie, butter' %>
      <p class="help-block"><%= t('helpers.help.project.tag_list') %></p>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :money_budget, class: 'col-sm-2' %>
    <div class="col-sm-10">
      <div class="input-group">
        <div class="input-group-addon"><%= current_user.currency_unit %></div>
        <%= f.number_field :money_budget, class: 'form-control', placeholder: '10' %>
      </div>
      <p class="help-block"><%= t('helpers.help.project.money_budget', currency_unit: current_user.currency_unit) %></p>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :time_budget, class: 'col-sm-2' %>
    <div class="col-sm-10">
      <%= f.number_field :time_budget, class: 'form-control', placeholder: '1' %>
      <p class="help-block"><%= t('helpers.help.project.time_budget') %></p>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
